<Window x:Class="XLSXtoDOC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XLSXtoDOC"
        mc:Ignorable="d"
        Title="Excel to Word" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
            Name="buttonLoad"
            Margin="10"
            Click="buttonLoad_Click">Открыть файл</Button>

        <Button Grid.Row="1"
                Name="buttonSave"
                Margin="10"
                Click="buttonSave_Click">Сохранить файл</Button>

        <StackPanel Grid.Row="2"
                    Margin="10"
                    Orientation="Horizontal">
            <TextBlock Margin="0, 0, 10, 0">Выбран файл:</TextBlock>
            <TextBlock Name="textBlockSelectedFile"></TextBlock>
            <TextBox Name="textBoxLoadedFile" Width="auto" MaxWidth="450" TextWrapping="Wrap"></TextBox>
        </StackPanel>
    </Grid>
</Window>
